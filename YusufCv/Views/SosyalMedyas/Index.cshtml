@model IEnumerable<YusufCv.Models.SosyalMedya>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br /><br /><br /><br />
<p>
    @Html.ActionLink("Yeni Ekle", "Create",null,new{@class="btn btn-primary"})
</p>
<table class="table table-bordered table-striped table-responsive-sm">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Linked)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GitHub)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Twitter)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Facebook)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Instagram)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Linked)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GitHub)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Twitter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Facebook)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instagram)
            </td>
            <td>
                @Html.ActionLink("Güncelle", "Edit", new { id = item.SosyalId }, new { @class = "btn btn-warning" }) |

                @Html.ActionLink("Sli", "Delete", new { id = item.SosyalId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
