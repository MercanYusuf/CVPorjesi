@model IEnumerable<YusufCv.Models.Kimlik>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br /><br /><br /><br />
<p>
    @Html.ActionLink("Yeni Ekle", "Create",null,new{@class="btn btn-primary"})
</p>
<table class="table table-bordered table-striped table-responsive-sm">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Soyad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unvan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ResimURL)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Soyad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Unvan)
        </td>
        <td><img src="@item.ResimURL" width="100" height="100" /></td>
        <td>
            @Html.ActionLink("Güncelle", "Edit", new { id = item.KimlikId }, new { @class = "btn btn-warning" }) |

            @Html.ActionLink("Sil", "Delete", new { id = item.KimlikId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
    }

</table>
